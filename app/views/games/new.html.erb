<h1>New Game</h1>

<ul class="d-flex gap-2">
  <% @letters.each do |letter| %>
    <li class="list-group-item badge bg-info p-3"><%= letter.capitalize %></li>
  <% end %>
</ul>

<form action="/score" method="post" data-turbo="false" class=" d-flex col-4 m-2 gap-3 p-3 card">
  <label for="word">What is the longest word you can think of?</label>
  <input type="text" id="word" name="word">
  <input type="submit" value="Play">
  <%= hidden_field_tag :letters, @letters.join(" ")%>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
